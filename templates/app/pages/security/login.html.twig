{% extends 'app/pages/security/template.html.twig' %}

{% block title %}Connexion Ã  son espace{% endblock %}

{% block main_content %}
    <div class="main-content">
        <h1>Se connecter</h1>

        <form method="post" class="form-login">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

           <div class="line">
               <label for="inputUsername">Nom utilisateur</label>
               <input type="text" value="{{ last_username }}" name="username" id="inputUsername" required autofocus>
           </div>
            <div class="line">
                <label for="inputPassword">Mot de passe</label>
                <div class="see-password">
                    <input type="password" name="password" id="inputPassword" required>
                    <span class="icon-vision btn-see-password"></span>
                </div>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="line">
                <div id="forget"></div>
            </div>

            <div class="form-button">
                <button class="btn btn-primary" type="submit">
                    Se connecter
                </button>
            </div>
        </form>
    </div>
{% endblock %}