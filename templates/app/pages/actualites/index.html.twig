{% extends 'app/layout/layout.html.twig' %}

{% block title %}Actualités {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#    {{ encore_entry_link_tags('contact') }}#}
{% endblock %}

{% block main_content %}
    <div class="title-page">
        <h1 data-aos="fade-right">Actualités</h1>
        <div class="deco-title-page"></div>
    </div>

    <div class="main-content">
        <div class="default-page">
            <div class="page-news news">
                {% if articles | length > 0 %}
                    {% for article in articles %}
                        <a href="{{ path('app_actualites_read', {'slug': article.slug}) }}" class="card" data-aos="fade-down" data-aos-delay="0">
                            <div class="card-header">
                                <div class="subtitle">{{ article.createAtStringLong }}</div>
                                <div class="title">{{ article.title }}</div>
                            </div>
                            <div class="card-body">
                                <div class="image">
                                    <img class="lozad" data-src="{{ asset('articles/' ~ article.file) }}" alt="illustration news">
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                {% else %}
                    <div class="card">
                        <div class="card-header">
                            Aucun article pour le moment.
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {#    {{ encore_entry_script_tags('contact') }}#}
{% endblock %}